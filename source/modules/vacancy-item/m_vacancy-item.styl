.m_vacancy-item
  position relative
  border-bottom 1px solid #d9dfe3
  padding-bottom 15px
  margin-bottom 15px
  @media SM
    padding-bottom 40px
    margin-bottom 30px
  &:last-child
    margin-bottom 0
  .title
    margin-bottom 10px
    a
      exo()
      font-weight bold
      font-size 24px
      line-height 30px
      color $blue
      @media SM
        font-size 32px
        line-height 50px
      &:hover
        color $sky
        text-decoration underline
  .price
    font-weight bold
    font-size 16px
    margin-bottom 10px
    @media SM
      margin-bottom 15px
  .desc
    color #666666
    font-size 16px
    line-height 24px
    p:last-child
      margin-bottom 0
.m_start-steps
  background #f2fafc
  padding 15px 0
  @media SM
    padding 30px 0
  @media MD
    padding 60px 0
  .section-title
    margin-bottom 30px
  .list
    .item
      position relative
      padding-left 60px
      margin-bottom 30px
      @media SM
        float left
        width 33.333%
        margin-bottom 0
      &:last-child
        margin-bottom 0
      .number
        color $blue
        font-size 80px
        line-height 1
        font-weight bold
        position absolute
        left 0
        top -20px
        @media SM
          position static
          font-size 100px
          margin-bottom 10px
      .title
        margin-bottom 5px
        a
          exo()
          font-weight bold
          font-size 21px
          color #000
          line-height 1
          @media MD
            font-size 24px
          &:hover
            color $sky
            text-decoration underline
      .desc
        font-size 14px
        line-height 24px
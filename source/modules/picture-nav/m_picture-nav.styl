.m_picture-nav
  background #fff
  padding 30px 0
  @media MD
    padding 60px 0
  .item
    float left
    width 50%
    @media SM
      width 25%
    a
      display table
      width 101%
      height 100%
      background-repeat no-repeat
      background-position 50%
      background-size cover
      text-decoration none
      position relative
      text-align center
      overflow hidden
      &:before
        anim()
        content ''
        position absolute
        left 0
        top 0
        width 100%
        height 100%
        background #000
        opacity 0.5
      &:hover
        &:before
          opacity 0.3
        span
          text-decoration underline
      span
        exo()
        display table-cell
        vertical-align middle
        color #fff
        font-size 24px
        line-height 1
        position relative
        z-index 1

.m_service-details
  background #f2fafc
  padding 15px 0
  @media SM
    padding 30px 0
  @media MD
    padding 60px 0
  & + .m_start-steps
    background #ffffff
  .section-title
    margin-bottom 20px
  .item
    margin-bottom 20px
    @media SM
      margin-bottom 0
    .image
      img
        width 100%
        max-width 100%
    .title
      exo()
      font-size 20px
      padding-top 5px
      padding-bottom 10px
      font-weight bold
    .desc
      font-size 14px
      line-height 24px
      color #666
      margin-bottom 10px
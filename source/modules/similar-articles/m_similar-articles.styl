.m_similar-articles
  position relative
  border-top 1px solid #dadfe0
  padding-top 15px
  @media MD
    padding-top 30px
  .title
    exo()
    font-size 24px
    text-align center
    font-weight bold
    margin-bottom 15px
    @media MD
      font-size 32px
      margin-bottom 30px
  .list
    clearfix()
    .item
      height 70px
      position relative
      padding-left 85px
      margin-bottom 15px
      @media SM
        float left
        width 33.333%
      .image
        width 70px
        height 70px
        position absolute
        left 0
        top 0
        a
          display block
          width 100%
          height 100%
          background-position 50%
          background-size cover
          background-repeat no-repeat
      .post-date
        color #666
      .title
        text-align left
        margin-bottom 0
        font-size 16px
        line-height 1
        @media SM
          padding-right 10px
        a
          font-size 16px
          line-height 1
          display inline-block
          vertical-align middle
          color $blue
          font-weight normal
          margin-bottom 0
          @media XS
            font-size 18px
          &:hover
            color $sky
            text-decoration underline
.m_news-list
  clearfix()
  position relative
  .news-item
    anim()
    background #fff
    margin-bottom 15px
    margin-left 1%
    margin-right 1%
    float left
    width 98%
    position relative
    box-shadow 0 0 5px 1px rgba(66,72,74,0.2)
    @media SM
      height 270px
      overflow hidden
      .news-body
        height 100%
        position relative
        &:after
          content ''
          position absolute
          left 0
          bottom 0
          width 100%
          height 50px
          box-shadow inset 0 -50px 20px -20px rgba(255,255,255,.95)
    @media LG
      margin-left 0.75%
      margin-right 0.75%
    &:hover
      @media LG
        box-shadow 0 0 10px 2px rgba(66, 72, 74, .3)
    &.medium
      @media XS
        .image
          width 150px
          height 100%
          position absolute
          left 0
          top 0
          z-index 1
        .news-body
          padding-left 150px
      @media SM
        width 48%
      @media LG
        width 48.5%
        .image
          width 47%
        .news-body
          padding-left 47%
    &.large
      @media XS
        .image
          height 270px
      @media SM
        width 73%
        .image
          width 40%
          height 100%
          position absolute
          left 0
          top 0
          z-index 1
        .news-body
          padding-left 40%
      @media LG
        width 73.5%
        .image
          width 47%
        .news-body
          padding-left 47%
    &.normal
      @media XS
        float left
        width 48%
        height 270px
        overflow hidden
        .news-body
          height 100%
          position relative
          &:after
            content ''
            position absolute
            left 0
            bottom 0
            width 100%
            height 50px
            box-shadow inset 0 -50px 20px -20px rgba(255,255,255,.95)

      @media SM
        width 23%
      @media LG
        width 23.5%
    .image
      height 200px
      a
        position relative
        display block
        width 100%
        height 100%
        background-repeat no-repeat
        background-position top center
        background-size cover
        &:after
          anim()
          content ''
          position absolute
          left 0
          top 0
          width 100%
          height 100%
          background #000
          opacity 0
        &:hover
          &:after
            opacity .6
    .news-body
      color #000
      font-size 14px
      line-height 24px
      .title
        a
          anim()
          display inline-block
          vertical-align middle
          color $blue
          font-size 15px
          line-height 24px
          padding 10px 15px
          @media MD
            font-size 18px
            line-height 24px
          @media LG
            padding 20px 15px 10px 15px
          &:hover
            color $sky
            text-decoration underline
      .desc
        padding 0 15px
        margin-bottom 15px
      .post-date
        padding 0 15px
        color #666

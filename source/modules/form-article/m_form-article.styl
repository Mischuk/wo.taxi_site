.m_form-article
  background #fafafa
  padding 15px 20px
  margin-top 30px
  max-width 480px
  box-shadow 0 0 5px 1px rgba(66,72,74,0.2)
  @media SM
    padding 25px 30px
  @media LG
    padding 45px 50px
  form
    position relative
    .form-row
      margin-bottom 15px
      &:last-child
        margin-bottom 0
    .title
      exo()
      font-size 24px
      font-weight bold
      margin-bottom 15px
    label
      position relative
      display block
      padding-left 30px
      .icon
        position absolute
        left 0
        top 50%
        &.username
          background: url('../images/sprite.png') no-repeat 0 -100px;
          width: 13px;
          height: 16px;
          margin-top -8px
        &.usertel
          background: url('../images/sprite.png') no-repeat -50px -100px;
          width: 16px;
          height: 16px;
          margin-top -8px
        &.useremail
          background: url('../images/sprite.png') no-repeat -100px -100px
          width 16px
          height 12px
          margin-top -6px
        &.usermessage
          background: url('../images/sprite.png') no-repeat -200px -100px;
          width: 16px;
          height: 13px;
          margin-top -7.5px
        &.userfile
          background: url('../images/sprite.png') no-repeat -150px -100px;
          width: 16px;
          height: 16px;
          margin-top -8px
      input,
      textarea
        opensans()
        border none
        border-bottom 1px solid #c8c8c8
        width 100%
        padding 18.5px 0
        font-size 16px
        line-height 1
        background none
        &:focus
          & + .username
            background-position 0 -150px
          & + .usertel
            background-position -50px -150px
          & + .useremail
            background-position -100px -150px
          & + .usermessage
            background-position -200px -150px
      textarea
        padding-bottom 8px
    button[type=submit]
      exo()
      font-weight normal
      background $orange
      color #fff
      font-size 20px
      line-height 1
      display block
      width 100%
      padding 20px 15px
      box-shadow 1px 1px 4px rgba(0,0,0,.3)
      max-width 210px
      margin-left 30px
      &:hover
        background $blue
      &:active
        background $blue - 15%
        box-shadow 0px 0px 2px rgba(0,0,0,.4)
    .attach-file
      label
        input
          position absolute
          // left -9999px
          // top -9999px
          opacity 0
          width 1px
          height 1px
        .border
          border-bottom 1px solid #c8c8c8
          padding 18.5px 0
        .btn-txt
          font-size 12px
          color #666666
          display block
          padding-top 5px
          @media XS
            position absolute
            right 0
            top 18.5px
            line-height 36px
            text-align right
            padding-top 0
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            max-width 170px
        .btn-inp
          background #fff
          display inline-block
          vertical-align middle
          border-radius $radius
          padding 7px 15px
          font-weight 500
          box-shadow 1px 1px 3px 1px rgba(0,0,0,.1)
          color #666666
          cursor pointer
          sn()
          anim()
          &:hover
            background $blue
            color #fff
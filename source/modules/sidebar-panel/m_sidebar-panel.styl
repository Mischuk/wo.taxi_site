.m_sidebar-panel
  anim()
  background #fff
  position absolute
  left 0
  top 0
  z-index 120
  height 100%
  box-shadow 0 0 15px rgba(0,0,0,.5)
  max-width 90%
  transform translateX(-105%)
  &.is-open
    transform translateX(0%)
  @media XS
    min-width 400px
  @media LG
    margin-left -260px
    left 0
    width 50%
    .scroll
      .header,
      .body
        width 330px
        margin-left auto
      .header
        .bottom
          &:after
            content ''
            position absolute
            left -200%
            width 200%
            top 0
            height 100%
            background $sky
  .scroll
    position relative
    overflow auto
  .header
    height 142px
    .top
      height 42px
      padding-left 15px
    .bottom
      position relative
      background $sky
      height 100px
    .contacts
      @extends .m_header .contacts
      .callback
        border-right none
    .logo
      @extends .m_header .logo
    .actions
      a
        position absolute
        right 15px
        top 50%
        margin-top -16px
    .main-menu
      width 36px
      height 36px
      position absolute
      left 15px
      top 50%
      margin-top -18px
      z-index 1000
      a
        border 1px solid #fff
        border-radius $radius
        display inline-block
        vertical-align middle
  .body
    padding 15px
    .actions
      margin-bottom 10px
      .signin
        a
          width 100%
          padding 15px 10px
          font-size 16px
    .search
      form
        position relative
      input
        width 100%
        height 46px
        border none
        border-bottom 1px solid #c8c8c8
        padding-left 10px
        padding-right 36px
        opensans()
        &:focus
          border-color $sky
      button
        position absolute
        right 0
        top 0
        z-index 1
        border none
        width 36px
        height 46px
        background none
        &:after
          content ''
          position absolute
          background: url('../images/sprite.png') no-repeat -100px -50px;
          width: 15px;
          height: 16px;
          position absolute
          left 50%
          top 50%
          margin-left -7.5px
          margin-top -8px
        &:hover
          &:after
            background-position -250px -100px
    .catalog
      h3
        exo()
        font-size 24px
        line-height 1
        font-weight normal
        margin-bottom 10px
        margin-top 15px
      ul
        margin-bottom 20px
        padding-left 10px
        li
          a
            color $blue
            font-size 14px
            display inline-block
            vertical-align middle
            padding 5px 0
            &:hover
              color $sky
              text-decoration underline
    .user-locate
      margin-bottom 30px
      margin-top 15px
      .locate-result
        line-height 1
        display inline-block
        vertical-align middle
        font-size 13px
        .label
          color #666666
          display inline-block
          vertical-align middle
          position relative
          padding-left 15px
          &:after
            content ''
            background: url('../images/sprite.png') no-repeat 0 0;
            width: 12px;
            height: 16px;
            position absolute
            left 0
            top 50%
            margin-top -8px
        .value
          a
            color $blue
            font-size 13px
            display inline-block
            vertical-align middle
            span
              border-bottom 1px dashed $blue
              display inline-block
              vertical-align middle
              max-width 120px
              white-space nowrap
              overflow hidden
              text-overflow ellipsis
            &:hover
              span
                color $sky
                border-color $sky
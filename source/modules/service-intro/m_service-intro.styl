.m_service-intro
  background-repeat no-repeat
  background-position 50%
  background-size cover
  height 450px
  text-align center
  color #fff
  @media SM
    height 500px
  @media MD
    height 600px
  h3
    font-size 24px
    text-transform uppercase
    margin-bottom 10px
    @media XS
      font-size 30px
    @media MD
      font-size 45px
  p
    exo()
    text-transform uppercase
    font-size 16px
    @media XS
      font-size 20px
  .action
    @media MD
      margin-top 30px
    a
      padding 20px 30px
      font-size 16px
.m_join
  clearfix()
  position relative
  .block
    height 460px
    @media SM
      float left
      width 50%
    @media MD
      height 700px
    &:first-child
      .wrapper
        @media LG
          max-width 600px
          margin-right 0
          padding-right 180px
    &:last-child
      .wrapper
        @media LG
          max-width 600px
          margin-left 0
          padding-left 80px
          .desc
            padding-right 100px
    a
      display block
      width 100%
      height 100%
      background-position 50%
      background-size cover
      background-repeat no-repeat
      position relative
      text-align center
      color #fff
      &:after
        content ''
        position absolute
        left 0
        top 0
        width 100%
        height 100%
        background #000
        opacity .7
        anim()
      &:hover
        &:after
          opacity .4
        .title
          text-decoration none
    .wrapper
      z-index 1

    .title
      exo()
      font-size 24px
      line-height 1.2
      text-decoration underline
      display block
      margin-bottom 15px
      @media XS
        font-size 30px
      @media MD
        font-size 36px
      @media LG
        text-align left
    .desc
      font-size 14px
      line-height 24px
      @media LG
        display block
        text-align left
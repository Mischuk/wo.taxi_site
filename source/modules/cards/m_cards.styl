.m_cards
  position relative
  .lead
    height 400px
    background-repeat no-repeat
    background-position 50%
    background-size cover
    position relative
    @media MD
      height 500px
    @media LG
      height 600px
    .details
      position absolute
      left 0
      bottom 15px
      width 100%
      text-align center
      @media MD
        bottom 30px
      a
        padding 15px 45px
        font-size 18px
  .cards-list
    padding 30px 0
    img
      max-width 100%
    .item
      text-align center
      margin-bottom 40px
      .image
        img
          display inline-block
          vertical-align middle
      .title
        margin-top -60px
        exo()
        font-weight bold
        font-size 24px
        margin-bottom 10px
      .desc
        font-size 14px
        line-height 24px
        color #333333
        margin-bottom 10px
        max-width 320px
        margin-left auto
        margin-right auto
      .details
        a
          background #edf1f2
          color $blue
          &:hover
            background $blue
            color #fff
          &:active
            background $blue - 15%
  .guide
    margin-top -40px
    padding-bottom 15px
    @media MD
      padding-bottom 30px
    .item
      height 320px
      @media MD
        height 400px
      a
        display block
        width 100%
        height 100%
        background-repeat no-repeat
        background-position 50%
        background-size cover
        position relative
        text-align center
        &:after
          anim()
          content ''
          position absolute
          left 0
          top 0
          width 100%
          height 100%
          background #000
          opacity .4
        &:hover
          &:after
            opacity .2
          span
            text-decoration none
        span
          exo()
          position relative
          z-index 1
          color #fff
          font-size 24px
          line-height 1
          text-decoration underline
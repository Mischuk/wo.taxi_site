body
  opensans()
  font-size 15px
  line-height 1.5
h1, h2, h3, h4, h5, h6
  exo()
  line-height 1.2
  font-weight bold
h1
  font-size 36px
h2
  font-size 30px
h3
  font-size 24px
h4
  font-size 18px
h5
  font-size 16px
h6
  font-size 14px
a[href^="tel"]
  cursor default
p
  margin-top 0
  margin-bottom 20px
article
  position relative
  a
    color $blue
    &:hover
      text-decoration underline
      color $sky
  p
    color #333333
    &:last-child
      margin-bottom 0
  img
    max-width 100%
    width 100%
    margin-bottom 10px
  h1, h2, h3, h4, h5
    margin-bottom 0.5em
  h2
    font-size 24px
    @media MD
      font-size 32px
  h3
    font-size 20px
    @media MD
      font-size 24px
  h4
    font-size 16px
    @media MD
      font-size 20px
  blockquote
    border-left 3px solid #424242
    padding-left 20px
  > ul
    padding-bottom 20px
    li
      position relative
      padding-left 15px
      &:before
        content 'â€¢'
        color #ea5b2e
        font-weight bold
        position absolute
        left 0
        top 0
      & + li
        margin-top 5px
  ol
    li
      position relative
      padding-left 30px
      counter-increment step-counter
      margin-bottom 15px
      &:before
        content counter(step-counter)
        margin-right 10px
        margin-bottom 4px
        font-size 80%
        background-color #424242
        color #fff
        font-weight bold
        padding 3px 8px
        border-radius $radius
        position absolute
        left 0
        top 0
.section-title
  exo()
  text-align center
  @media LG
    margin-bottom 30px
  h2
    font-size 26px
    line-height 1
    margin-bottom 15px
    @media XS
      font-size 36px
    @media MD
      font-size 50px
  h3
    font-size 22px
    @media XS
      font-size 30px
    @media MD
      font-size 36px
  p
    font-size 18px
    line-height 1
    @media XS
      font-size 24px
    @media MD
      font-size 30px

.page-title
  text-align center
  margin-bottom 20px
  @media MD
    margin-top 15px
    margin-bottom 30px
  h2
    font-size 36px
    line-height 1
    @media MD
      font-size 50px
  h3
    font-size 22px
    font-weight normal
    @media XS
      font-size 30px
    @media MD
      font-size 36px

.page-picture-title
  text-align center
  height 320px
  position relative
  color #fff
  @media SM
    height 400px
  @media MD
    height 450px
  .m_breadcrumbs
    position absolute
    left 0
    top 0
    width 100%
    a
      color #fff !important
    li:after
      background-image url("../images/breadcrumb-arrow-white.png")
  .background
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    background-repeat no-repeat
    background-position 50%
    background-size cover
  h2
    text-align center
    display inline-block
    vertical-align middle
    margin-bottom 25px
    font-size 36px
    line-height 1
    margin-top 20px
    @media MD
      font-size 50px
    &.border
      margin-bottom 50px
      position relative
      &:after
        content ''
        position absolute
        left 0
        bottom -25px
        width 100%
        height 3px
        background #fff
  p
    exo()
    font-size 18px
    line-height 25px
    max-width 1000px
    margin-left auto
    margin-right auto
    @media XS
      font-size 20px
      line-height 30px
    @media MD
      font-size 32px
      line-height 50px

.backward
  margin 15px 0
  a
    color $blue
    position relative
    display inline-block
    vertical-align middle
    padding 20px
    &:after
      content ''
      background: url('../images/pagination.png') no-repeat 0 -17px;
      width: 8px;
      height: 15px;
      position absolute
      left 0
      top 50%
      margin-top -(@height/2)
    &:hover
      color $sky
      text-decoration underline
.checkboxes
  display inline-block
  vertical-align middle
  cursor default
  label
    display inline-block
    vertical-align middle
    font-size 0
  input
    opacity 0
    font-size 0
    width 0
    height 0
    position absolute
    left -9999px
  .icon
    anim()
    size(16px)
    position relative
    display inline-block
    vertical-align middle
    border 2px solid #c8c8c8
    border-radius $radius
    cursor pointer
    &:after
      anim()
      content ''
      background: url('../images/sprite.png') no-repeat -200px 0;
      width: 12px;
      height: 10px;
      position absolute
      left 50%
      top 50%
      margin-left -(@width/2)
      margin-top -(@height/2)
      transform scale(0.1) rotate(45deg)
  .label
    sn()
    font-style normal
    display inline-block
    vertical-align middle
    cursor pointer
    font-size 16px
    padding-left 5px
  input:checked + .icon
    background $blue
    border-color $blue
    &:after
      transform scale(1) rotate(0)
.radios
  display inline-block
  vertical-align middle
  cursor default
  label
    position relative
    display inline-block
    vertical-align middle
    font-size 0
  input
    opacity 0
    font-size 0
    width 0
    height 0
    position absolute
    left -9999px
  .icon
    size(15px)
    display inline-block
    vertical-align middle
    border 2px solid #c8c8c8
    border-radius 50%
    cursor pointer
    position absolute
    left 0
    top 4px
  .label
    sn()
    font-style normal
    display inline-block
    vertical-align middle
    cursor pointer
    font-size 14px
    padding-left 25px
  input:checked + .icon
    box-shadow inset 0 0 0 2px #fff
    background $orange
    border-color $orange
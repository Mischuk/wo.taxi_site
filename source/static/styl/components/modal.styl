.modal
  position relative
  max-width 400px
  margin 6px auto
  padding 20px
  background #fff
  border-radius 0
  box-shadow 2px 2px 8px 1px rgba(0,0,0,.2)
  @media SM
    padding 20px 40px
  @media MD
    padding 20px 60px
  .mfp-close
    background url('../images/sprite.png') no-repeat -250px 0
    width 14px
    height 14px
    line-height 14px
    font-size 0
    color transparent
    text-indent -9999px
    right 10px
    top 10px
    &:hover
      background-position -300px 0
  p
    &:last-child
      margin-bottom 0
  .modal-footer
    border-top 1px solid #ebebeb
    background #f2fafc
    padding 30px 0
    p
      font-size 14px
      margin-bottom 0
      color #666666
    ul
      margin-top 10px
      li
        width 20px
        height 20px
        display inline-block
        vertical-align middle
        margin-right 10px
        a
          display block
          width 100%
          height 100%
          background-image url("../images/sprite.png")
          background-repeat none
          &.ok
            background-position -50px 0
          &.vk
            background-position -100px 0
          &.fb
            background-position -150px 0
  .modal-title
    margin-bottom 10px
    text-align center
    h1
      font-size 24px
      @media XS
        font-size 30px
    h2
      font-size 18px
      @media XS
        font-size 24px
    .logo
      height 60px
      text-align center
      @media SM
        height 100px
      img
        display inline-block
        vertical-align middle
        height 100%
        max-width 100%
  form
    position relative
    margin-top 30px
    @media SM
      padding-bottom 30px
      margin-bottom 30px
    .form-col
      margin-bottom 15px
      @media SM
        float left
        width 31%
        margin-right 3.5%
      &:last-child
        margin-bottom 0
        @media SM
          margin-right 0
    label
      position relative
      display block
      padding-left 30px
      .icon
        position absolute
        left 0
        top 50%
        &.username
          background: url('../images/sprite.png') no-repeat 0 -100px;
          width: 13px;
          height: 16px;
          margin-top -8px
        &.usertel
          background: url('../images/sprite.png') no-repeat -50px -100px;
          width: 16px;
          height: 16px;
          margin-top -8px
        &.userlocate
          background: url('../images/sprite.png') no-repeat 0 0;
          width: 12px;
          height: 16px;
          margin-top -8px
      input
        opensans()
        border none
        border-bottom 1px solid #c8c8c8
        width 100%
        padding 18.5px 0
        font-size 16px
        line-height 1
        &:focus
          & + .username
            background-position 0 -150px
          & + .usertel
            background-position -50px -150px
    button[type=submit]
      exo()
      font-weight normal
      background $orange
      color #fff
      font-size 20px
      line-height 1
      display block
      width 100%
      padding 20px 15px
      box-shadow 1px 1px 4px rgba(0,0,0,.3)
      &:hover
        background $blue
      &:active
        background $blue - 15%
        box-shadow 0px 0px 2px rgba(0,0,0,.4)

  .terms
    margin 15px 0
    position relative
    @media XS
      margin 30px 0
    @media SM
      margin 0
      position absolute
      left 0
      bottom 0
      width 100%
    .icon
      position absolute
      left 0
      top 2px
    .label
      font-size 14px
      line-height 1.3
      color #666666
      display inline-block
      vertical-align middle
      @media SM
        margin-left -10px
      a
        color $blue
        &:hover
          color $sky
          text-decoration underline
#modal-callback
  max-width 940px
#modal-locate
  max-width 775px
  padding-left 0
  padding-right 0
  h1
    text-align left
  .modal-body,
  .modal-title,
  .modal-bottom
    padding-left 20px
    padding-right 20px
    @media SM
      padding-left 40px
      padding-right 40px
    @media MD
      padding-left 60px
      padding-right 60px
  form
    margin-bottom 0
    margin-top 0
    padding 30px 0
    .form-col
      width 100%
    .remark
      color #666
      font-size 14px
      padding-left 30px

  .modal-bottom
    background #f2fafc
    padding-top 30px
    .title
      font-size 15px
      font-weight bold
      margin-bottom 10px
    ul
      li
        display inline-block
        vertical-align top
        width 49%
        &.etc
          > a
            padding-bottom 0
            font-weight bold
            border-bottom 1px dashed $blue
            &:hover
              border-color $sky
              text-decoration none
        a
          display inline-block
          vertical-align middle
          padding 5px 0
          font-size 14px
          color $blue
          &:hover
            color $sky
            text-decoration underline
        ul.hidden
          display none
#modal-ty,
#modal-manager
  max-width 570px
  padding-left 0
  padding-right 0
  padding-bottom 0
  .modal-title,
  .modal-footer
    padding-left 20px
    padding-right 20px
    @media SM
      padding-left 40px
      padding-right 40px
    @media MD
      padding-left 60px
      padding-right 60px
  .modal-title
    text-align left
    h1
      margin-bottom 15px
    p
      margin-bottom 10px
    ul
      padding-bottom 20px
      li
        display inline-block
        vertical-align middle
        margin-right 10px
        a
          color $blue
          &:hover
            color $sky
#modal-ty
  h1
    font-weight normal
    padding-top 30px
    padding-bottom 30px
